
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>Pages</title>
        <link rel="stylesheet" href="/public/css/style.css"></link>
    </head>
    <body class="pages">
        <h1>Pages</h1>
        <div class="container">
            <ul>
            {{ range . }}
            <li data-page-id="{{ .Page.ID.Hex }}">
                <h3>{{ .Page.Title }}</h3>
                <div class="desc">
                    <span class="created-at">{{ .Page.CreatedAt.Format "1/2/06 15:04" }}</span>
                    <a href="/page/{{ .Page.ID.Hex }}">&#x2934;</a>
                    <a target="_blank" href="{{.Page.URL}}">{{ .Host }}</a>
                </div>
            </li>
            {{ end }}
            </ul>
            <div class="content">
                <iframe id="iframe"></iframe>
            </div>
        </div>
        <script src="/public/js/jquery-2.2.2.min.js"></script>
        <script src="/public/js/pages.js"></script>
    </body>
</html>
