
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>Pages</title>
        <link rel="stylesheet" href="/public/css/style.css"></link>
    </head>
    <body class="pages">
        <h1>Pages</h1>
        <ul>
        {{ range . }}
        <li>
            <h3><a href="/page/{{ .Page.ID.Hex }}">{{ .Page.Title }}</a></h3>
            <div class="desc">
                <span class="created-at">{{ .Page.CreatedAt.Format "1/2/06 15:04" }}</span>
                <a target="_blank" href="{{.Page.URL}}">{{ .Host }}</a>
            </div>
        </li>
        {{ end }}
        </ul>
    </body>
</html>
