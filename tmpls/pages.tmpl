
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title>Pages</title>
        <link rel="stylesheet" href="/public/css/style.css"></link>
    </head>
    <body class="pages">
        <h1>Pages</h1>
        <div class="container">
            <ul>
            {{ range . }}
            <li id="{{ .Page.ID.Hex }}" data-page-id="{{ .Page.ID.Hex }}">
                <h3>{{ .Page.Title }}</h3>
                <div class="desc">
                    <span>{{ .Host }}</span>
                </div>
                <div class="tools">
                    <span data-page-id="{{ .Page.ID.Hex }}" class="delete">Delete</span>
                </div>
            </li>
            {{ end }}
            </ul>
            <div class="content">
                <div class="meta">
                    <h3 class="title"></h3>
                    <p class="info">
                        <span class="time"></span>
                        <a class="source" href=""></a>
                    </p>
                </div>
                <iframe id="iframe"></iframe>
            </div>
        </div>
        <script src="/public/js/jquery-2.2.2.min.js"></script>
        <script src="/public/js/pages.js"></script>
    </body>
</html>
